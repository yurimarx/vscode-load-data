{
  "name": "intersystems-load-data",
  "displayName": "InterSystems Load Data",
  "description": "Load data from csv/txt files into InterSystems IRIS",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "InterSystems Load Data",
      "properties": {
        "irisImporter.containerName": {
          "type": "string",
          "default": "iris",
          "description": "InterSystems IRIS Docker container name"
        },
        "irisImporter.namespace": {
            "type": "string",
            "default": "USER",
            "description": "IRIS namespace for connecting"
        }
      }
    },
    "commands": [
      {
        "command": "irisImporter.openForm",
        "title": "Import to IRIS Docker Container"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "irisImporter.openForm",
          "when": "resourceExtname == .csv || resourceExtname == .txt",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
